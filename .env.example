# =============================================================================
# Lead Generation Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your deployment
# IMPORTANT: Never commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_DB=leadgen
POSTGRES_USER=leadgen_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW

# Internal connection string (used by backend containers)
DATABASE_URL=postgresql://leadgen_user:CHANGE_THIS_SECURE_PASSWORD_NOW@postgres:5432/leadgen

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# APPLICATION SECURITY
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_TO_RANDOM_64_CHARACTERS_MINIMUM

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
ENVIRONMENT=production
LOG_LEVEL=INFO
API_RATE_LIMIT=100
BATCH_SIZE=1000

# -----------------------------------------------------------------------------
# EXTERNAL SERVICE API KEYS
# -----------------------------------------------------------------------------
# Leave blank to disable the integration
CLEARBIT_API_KEY=
ZEROBOUNCE_API_KEY=
INSTANTLY_API_KEY=
SMARTLEAD_API_KEY=

# -----------------------------------------------------------------------------
# PROCESSING CONFIGURATION
# -----------------------------------------------------------------------------
# Batch processing schedule (cron hours: 0,6,12,18 means midnight, 6am, noon, 6pm)
BATCH_SCHEDULE=0,6,12,18

# Maximum concurrent processing workers
CONCURRENT_WORKERS=10

# Feature flags
ENABLE_ENRICHMENT=true
ENABLE_VERIFICATION=true
ENABLE_AUTO_APPROVE=false
AUTO_APPROVE_THRESHOLD=85.0

# -----------------------------------------------------------------------------
# WHITE-LABELING (Optional - can also be configured via UI)
# -----------------------------------------------------------------------------
DEFAULT_COMPANY_NAME=Lead Generation Platform
DEFAULT_PRIMARY_COLOR=#667eea
DEFAULT_SECONDARY_COLOR=#764ba2

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Optional)
# -----------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Lead Generation Platform

# -----------------------------------------------------------------------------
# SSL/TLS CONFIGURATION
# -----------------------------------------------------------------------------
# Set to 'true' to enable automatic Let's Encrypt SSL certificates
ENABLE_SSL=false
DOMAIN_NAME=leadgen.yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# -----------------------------------------------------------------------------
# BACKUP CONFIGURATION
# -----------------------------------------------------------------------------
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30
